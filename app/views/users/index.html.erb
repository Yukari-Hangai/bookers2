<!--Usersユーザー一覧-->
<div>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
  <% end %>
</div>
<div class="container px-5 px-sm-0">
 <div class="row">
  <%= render 'books/list', {book: @book, user: current_user} %>
  <div class="col-md-8 offset-lg-1 mx-autorow align-items-start">
   <h2 class="mb-2">Users</h2>
    <table class="table">
     <thead>
      <tr>
       <th class="p-3 mx-auto border-bottom-2">Image</th>
       <th class="p-3 mx-auto border-bottom-2">Name</th>
       <th></th>
      </tr>
      </thead>
      <tbody>
       <% @users.each do |users| %>
       <tr>
        <td><%= image_tag users.get_profile_image(80,80) %></td>
        <td><%= users.name %></td>
        <td><%= link_to "Show",user_path(users.id) %></td>
       </tr>
       <% end %>
     </tbody>
    </table>

   </div>
  </div>
 </div>