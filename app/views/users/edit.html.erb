<div class="container">
 <div class="row">
  <div class="px-5">

   <h2>User info</h2>
   <div class="">
    <% if @user.errors.any? %>
       <%= @user.errors.count %>errors prohibited this obj from being saved:
       <ul>
        <% @user.errors.full_messages.each do |message| %>
         <li><%= message %></li>
        <% end %>
       </ul>
    <% end %>
   </div>

   <%= form_with model: @user do |f| %>

   <div class="mb-3">
    <label for="inputName">Name</label>
    <%= f.text_field :name, autofocus: true, id:"inputName", class: "form-control" %>
   </div>

   <div class="mb-3">
    <label for="inputImage">Image</label><br>
    <%= f.file_field :profile_image, accept:"image/*"  %>
   </div>

   <div class="mb-3">
    <label for="inputIntroduction">Introduction</label>
    <%= f.text_area :introduction, class: "form-control" %>
   </div>

   <div class="action">
    <button type="submit" class="btn btn-secondary">Update user</button>
   </div>

   <% end %>

  </div>
 </div>
</div>