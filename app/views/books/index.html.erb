<!--Books みんなの投稿一覧-->
<div class="container px-5 px-sm-0">
 <div class="row">
  <%= render 'list', {book: @book, user: @user} %>
  <div class="col-md-8 offset-lg-1 mx-autorow align-items-start">
   <h2 class="mb-2">Books</h2>
    
    <table class="table table-hover">
     <thead
      <tr>
       <th></th>
       <th class="p-3 mx-auto border-bottom-2">Title</th>
       <th class="p-3 mx-auto border-bottom-2">Opinion</th>
      </tr>
      </thead>
      <tbody>
       <% @books.each do |books| %>
       <tr>
        <td><%= image_tag books.user.get_profile_image(80,80) %></td>
        <td><%= link_to books.title, books_path %></td>
        <td><%= books.body %></td>
       </tr>
       <% end %>
     </tbody>
    </table>
    
   </div>
  </div>
 </div>
