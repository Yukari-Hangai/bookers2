
 <div class="col-md-3";>
    <h2 class="mb-2">User info</h2>
  <%= image_tag user.get_profile_image(100,100) %>
   <table>
    <tbody>
     <tr>
      <th class ="border-top p-2">name</th>
      <th class ="border-top p-2"><%= user.name %></th>
     </tr>
     <tr>
      <th class ="border-top p-2">introduction</th>
      <th class ="border-top p-2"><%= user.introduction %></th>
     </tr>
    </tbody>
   </table>
<br>
<br>
<div class="row">
 <%= link_to edit_user_path(user.id), class: 'btn btn-block btn-outline-secondary' do %>
  <i class="fas fa-user-cog"></i>
 <% end %>
</div>

<h2 class="mt-3">New book</h2>
<br>
<%= form_with model: book do |f| %>
 <div class="mb-3">
  <label for="inputTitle" class="form-label">Title</label>
  <%= f.text_field :title, class: "form-control",rows:"3" %>
 </div>
 <div class="mb-3">
  <label for="inputTitle" class="form-label">Opinion</label>
  <%= f.text_area :body, class: "form-control",rows:"3"%>
 </div>
  <br>
  <div class="action">
   <%= f.submit 'Create Book',class: "btn btn-success" %>
  </div>
<% end %>
 </div>
