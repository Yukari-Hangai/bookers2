<div class="container">
 <div class="row">
  <div class="px-5">
   
   <h1>Editing Book</h1>

   <%= form_with model: @book do |f| %>
   
   <div class="mb-3">
    <label for="inputTitle">Title</label>
     <%= f.text_field :title, autofocus: true, id:"inputTitle", placeholder:"title", class: "form-control" %>
   </div>
   <div class="mb-3">
    <label for="inputBody">Opinion</label>
     <%= f.text_area :body, placeholder:"opinions",class: "form-control" %>
   </div>
   
   <div class="action">
    <button type="submit" class="btn btn-success">Update Book</button>
   </div>
   
   <br>
   <%= link_to "Show ", book_path %>|<%= link_to " Back", books_path %>
   
   <% end %>
  </div>
 </div>
</div>