<!--投稿詳細-->
<div>
  <% if @book.errors.any? %>
    <%= @book.errors.count %>errors prohibited this obj from being saved:
    <ul>
     <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
     <% end %>
    </ul>
  <% end %>
</div>
<div class="container px-5 px-sm-0">
 <div class="row">
  <%= render 'list', {book: @book_new, user: @book.user} %>
   <div class="col-md-8 offset-lg-1 mx-autorow align-items-start">
   <h2 class="mb-2">Book detail</h2>

   <table class="table">
    <thead>
     <tr class="w-auto">
      <td><%= image_tag @book.user.get_profile_image(80,80) %><br><%= link_to @book.user.name, user_path(@book.user_id) %></td>
      <td><%= link_to @book.title, book_path(@book.id) %></td>
      <td><%= @book.body %></td>
      <td><% if @book.user == current_user %>
            <%= link_to "Edit", edit_book_path(@book.id), class: 'btn btn-success btn-sm' %>
          <% end %></td>
      <td><% if @book.user == current_user %>
            <%= link_to "Destroy", book_path(@book.id), method: :delete, class: 'btn btn-danger btn-sm',"data-confirm" => "本当に削除しますか？" %>
          <% end %>
      </td>
     </tr>
    </thead>
   </table>
   </div>
 </div>
</div>